---
import heroRef from "../assets/hero.jpg";
import Spacing from "../components/Spacing.astro";
import Heading from "../components/Heading.astro";
import Container from "../components/Container.astro";
import Button from "../components/Button.astro";
---
<style>
.c-hero-section {
  height: 100vh;
  width: 100%;
}

.c-hero-section__image {
  height: 100%;
  object-fit: cover;
  position: absolute;
  -webkit-user-drag: none;
  user-select: none;
  width: 100%;
  animation: darken 1.5s forwards;
}

.c-hero-section__content {
  bottom: 15vh;
  position: absolute;
  width: 100%;
}

.c-hero-section__content :global(h1) {
  opacity: 0;
  animation: fade-up-in 1s ease forwards;
  animation-delay: 0.25s;
}

.c-hero-section__content :global(p) {
  opacity: 0;
  animation: fade-up-in 1s ease forwards;
  animation-delay: 0.5s;
}

.c-hero-section__content :global(button) {
  opacity: 0;
  animation: fade-up-in 1s ease forwards;
  animation-delay: 0.75s;
}

@keyframes darken {
  0%   {filter: brightness(1);}
  100% {filter:brightness(0.5);}
}

@keyframes fade-up-in {
  0%   {
    opacity: 0;
    transform: translateY(30px);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

</style>

<div class="c-hero-section">
  <img class="c-hero-section__image" src={heroRef} alt="volleyball players" />
  <div class="c-hero-section__content">
    <Container paddingSize="x-large">
      <Spacing size="x-large">
        <Heading size="5x-large" tag="h1" color="white">Yet another <br/> volleyball club</Heading>
      </Spacing>

      <Spacing size="x-large">
      <Heading size="x-large" tag="p" color="white">Fostering a sense of community through the sport of volleyball.</Heading>
      </Spacing>

      <Button>Get involved</Button>
    </Container>
  </div>
</div>